<UserControl x:Class="EmberWpfCore.View.Tabs.PluginsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmberWpfCore.View.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="plugins">
  <d:UserControl.DataContext>
    <local:PluginsTabViewModel />
  </d:UserControl.DataContext>
    <Grid>
        <ListBox HorizontalAlignment="Left"
                 VerticalAlignment="Center" 
                 Height="430" Margin="10,0,0,0" Width="252"
                 ItemsSource="{Binding PluginsViewModel, Mode=OneWay}"
                 x:Name="pluginList"
                 />
        <Label Content="Plugin:" HorizontalAlignment="Left" Height="22" Margin="267,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="{Binding ElementName=pluginList, Path=SelectedItem}" HorizontalAlignment="Left" Height="22" Margin="347,10,0,0" VerticalAlignment="Top" Width="184"/>
        <Label Content="Status:" HorizontalAlignment="Left" Height="22" Margin="267,37,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</UserControl>
